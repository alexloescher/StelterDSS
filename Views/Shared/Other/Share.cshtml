@model Ingeniux.Runtime.CMSPageRequest
@using Ingeniux.Runtime
@{
    var siteControl = Model.Element("CSiteControl");
    var titlePresent = !String.IsNullOrWhiteSpace(_Functions.GetPageHeader(Model));
    if (siteControl != null)
    {
        var share_script = siteControl.GetElementValue("Share");
        if (share_script != null && share_script.Length > 0)
        {
            if (!titlePresent)
            {
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 share hidden-print">
        @Html.Raw(share_script.ToString())
    </div>  
            }
            else
            {
    <div class="col-lg-3 col-md-3 col-sm-4 col-xs-12 share hidden-print">
        @Html.Raw(share_script.ToString())
    </div>    
            }
        }
    }
}